template(name="index")
  .col-50.sm-row(class="{{#unless compare latest.count 'or' uploads}}no-file{{/unless}}")
    if compare latest.count 'or' uploads
      .listing: table.table: tbody
        each uploads
          +uploadRow
        each latest.each
          +listingRow
        if compare filesLength '>' latest.count
          tr: td(data-load-more colspan="3")
            h3.no-margin.center
              if loadMore
                i.la.la-circle-o-notch.la-spin
              else
                | Load More
    else
      h3.files-note
        if userOnly
          | You have no uploaded files
        else
          | Be the first to upload a file